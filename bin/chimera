#!/usr/bin/env bash
set -euo pipefail

# Simple wrapper to run the Chimera demo from project root.
# Make executable with: chmod +x bin/chimera

SCRIPT_PATH="$0"
# Resolve symlink to get the real script location if possible
if command -v readlink >/dev/null 2>&1; then
  SCRIPT_PATH="$(readlink -f "$0")"
fi
ROOT_DIR="$(cd "$(dirname "$SCRIPT_PATH")/.." && pwd)"
cd "$ROOT_DIR"

if [ -f ".venv/bin/activate" ]; then
  # shellcheck disable=SC1091
  source ".venv/bin/activate"
fi

export PYTHONPATH="$ROOT_DIR"

exec python3 scripts/visual_dashboard.py "$@"
